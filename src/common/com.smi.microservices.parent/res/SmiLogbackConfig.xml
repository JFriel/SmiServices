
<configuration>

	<!-- Timestamp to use when naming files -->
	<timestamp key="fileTimestamp" datePattern="yyyy-MM-dd-HHmmss" />


	<!-- Console appender definition -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<Target>System.out</Target>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>DENY</onMatch>
			<onMismatch>ACCEPT</onMismatch>
		</filter>
		<withJansi>true</withJansi>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%class{0})| %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<!-- Error appender definition -->
	<appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
		<Target>System.err</Target>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<withJansi>true</withJansi>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%class{0})| %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<!-- File appender definition -->
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>logs/${fileTimestamp}.log</file>
		<append>true</append>
		<immediateFlush>true</immediateFlush>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS}|%thread|%-5level|%-15(%logger{0})| %msg%n
			</pattern>
		</encoder>
	</appender>


	<!-- Set the loggers -->
	<root level="trace">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="STDERR" />		
		<appender-ref ref="FILE" />
	</root>

</configuration>
